{% extends 'base.html.twig' %}

{% block title %}Boutique : Accessoire{% endblock %}

{% block body %}
    <div class="row">
    {% for accessoire in boutiquesAccessoires %}
        <div class="col-2">
            <div class="thumbnail">
                <a href="{{ path('showOneBoutiques', {id: accessoire.id}) }}">
                    <img src="/images/boutiques/{{ accessoire.id }}.jpg" alt="Lights" style="width:100%">
                    <div class="caption">
                        <p>{{ accessoire.nom }}</p>
                    </div>
                </a>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
