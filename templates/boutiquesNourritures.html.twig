{% extends 'base.html.twig' %}

{% block title %}Boutique : Nourriture{% endblock %}

{% block body %}
<div class="row">
    {% for nourriture in BoutiquesNourritures %}
        <div class="col-2">
            <div class="thumbnail">
                <a href="{{ path('showOneBoutiques', {id: nourriture.id}) }}">
                    <img src="/images/boutiques/{{ nourriture.id }}.jpg" alt="Lights" style="width:100%">
                    <div class="caption">
                        <p>{{ nourriture.nom }}</p>
                    </div>
                </a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
